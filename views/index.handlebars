<div class="jumbotron text-center h1">
<h1>Burgers!</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <h2>Burgers that are not devoured!</h2>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <h2>Burgers that are devoured!</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <ul>
        {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=0}} {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <ul>
        {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=1}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>
</table>

